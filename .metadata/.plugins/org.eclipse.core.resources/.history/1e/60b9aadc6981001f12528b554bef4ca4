package string;

public class StringDemo {

	public static void main(String[] args) {
		
		String string1 = new String("Shrikant");
		String string2 = new String("Sarode");
		
		System.out.println(string1.substring(5));
		System.out.println(string1.substring(5,9));
		System.out.println(string1.trim());
		System.out.println(string1.toUpperCase());
		System.out.println(string1.trim().toLowerCase());
		System.out.println(string1.indexOf("t"));
		System.out.println(string1.trim().toLowerCase());
		System.out.println(string1.replace("i","aaa"));
		System.out.println(string1.concat(string2));
		
		if(string1.equals(string2))
		{
			System.out.println("Same");
		}
		
		String[] arr=string1.split(" ");
		
		for(String s : arr)
		{
			System.out.println(s);
		}
	}
}
