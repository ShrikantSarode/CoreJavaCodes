package patterns;

public class P20 {

	public static void main(String[] args) {
		
		int row=7;
		int col=7;
		
		for(int i=0;i<row;i++)
		{
			for(int j=0;j<col;j++)
			{
				if(i==j && (i+j)==6)
				{
					System.out.print("*");
				}
				else
				{
					System.out.print(" ");
				}
			}
			System.out.println();
		}
	}
}
