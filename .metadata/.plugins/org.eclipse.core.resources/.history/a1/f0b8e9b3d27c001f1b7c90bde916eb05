package patterns;

public class P17 {

	public static void main(String[] args) {
		int row=5;
		int col=5;
		int space=0;
		
		
		for(int i=0;i<row;i++)
		{
			for(int j=i;j<col;j++)
			{
				System.out.print("* ");
			}
			for(int s=0;s<space;s++)
			{
				System.out.print("  "+i);
			}
			col--;
			space++;
			System.out.println();
		}
	}
}
